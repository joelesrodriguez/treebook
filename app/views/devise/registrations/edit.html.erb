<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :first_name, input_html: {class: "form-control"},label_html: {class: "control-label"} %>

  <%= f.input :last_name, input_html: {class: "form-control"},label_html: {class: "control-label"} %>

  <%= f.input :profile_name, input_html: {class: "form-control"},label_html: {class: "control-label"} %>


  <%= f.input :email, input_html: {class: "form-control"},label_html: {class: "control-label"} %>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, input_html: {class: "form-control"},label_html: {class: "control-label"}, hint: 'leave blank if you dont want to change it', label: 'New Password' %>

  <%= f.input :password_confirmation, input_html: {class: "form-control"},label_html: {class: "control-label"} %>

  <%= f.input :current_password, input_html: {class: "form-control"},label_html: {class: "control-label"}, hint: 'We need your current password to confirm your changes' %>

  
  <div class"actions"><%= f.button :submit, class: "btn btn-default"  %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? 
  <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>

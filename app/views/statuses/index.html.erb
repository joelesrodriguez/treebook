<div class="page-header">
<h1>Todos los Estados <small>Subtexto</small></h1>
</div><!-- page-header -->
<%= link_to "Nuevo Estado", new_status_path, class: "btn btn-default btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong>nombre</strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
    <span class="admin">
      | <%= link_to "Editar", edit_status_path(status) %> |
      <%= link_to "Borrar", status, method: :delete, data: { confirm: "Esta seguro que desea borrar el estado?"} %>
    </span><!-- admin -->
  </div><!-- admin -->
</div><!-- status -->

<% end %>